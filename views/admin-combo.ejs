<%- include('partials/admin-header.ejs'); -%>
    <style>
        /* .admin-main {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        } */

        .admin-main h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .admin-main a {
            display: inline-block;
            margin-bottom: 15px;
            padding: 8px 12px;
            background: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: 0.3s ease-in-out;
        }

        .admin-main a:hover {
            background: #218838;
        }

        /* Bảng Combo */
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }

        table,
        th,
        td {
            border: 1px solid #ddd;
        }

        th,
        td {
            padding: 12px;
            text-align: center;
        }

        th {
            background: #007bff;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background: #f8f9fa;
        }

        tr:hover {
            background: #e2e6ea;
        }

        /* Nút sửa và xóa */
        td a {
            padding: 6px 10px;
            margin: 0 5px;
            text-decoration: none;
            border-radius: 4px;
            font-weight: bold;
        }

        td a[href*="edit-combo"] {
            background: #ffc107;
            color: black;
        }

        td a[href*="edit-combo"]:hover {
            background: #e0a800;
        }

        td a[href*="delete-combo"] {
            background: #dc3545;
            color: white;
        }

        td a[href*="delete-combo"]:hover {
            background: #c82333;
        }
    </style>
    <main class="admin-main">
        <h1>Danh sách Combo</h1>
        <a href="/admin/add-combo">➕ Thêm Combo</a>
        <table border="1">
            <tr>
                <th>Tên Combo</th>
                <th>Giá</th>
                <th>Giảm Giá</th>
                <th>Sản phẩm</th>
                <th>Hành động</th>
            </tr>
            <% combos.forEach(combo=> { %>
                <tr>
                    <td>
                        <%= combo.name %>
                    </td>
                    <td>
                        <%= Number(combo.price).toLocaleString("vi-VN") %> VNĐ
                    </td>
                    <td>
                        <%= combo.discount %> %
                    </td>
                    <td>
                        <%= combo.products %>
                    </td>
                    <td>
                        <a href="/admin/edit-combo/<%= combo.id %>">✏️ Sửa</a>
                        <a href="/admin/delete-combo/<%= combo.id %>" onclick="return confirm('Xóa combo này?')">❌ Xóa</a>
                    </td>
                </tr>
                <% }) %>
        </table>
    </main>


    <%- include('partials/admin-footer.ejs'); -%>